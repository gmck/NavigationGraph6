<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<!--RED BMW THEME-->

	<style name="Theme.NavigationGraph.RedBmw" parent="Theme.NavigationGraph.RedBmw.Base">

		<!--Vehicle Image-->
		<item name="vehicle_image">@drawable/bmw5</item>

		<!--AlertDialogRoundedCornersTheme style-->
		<item name="materialAlertDialogTheme">@style/AlertDialogRoundedCornersTheme</item>
		
	</style>

	<!-- Light theme. -->
	<style name="Theme.NavigationGraph.RedBmw.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<item name="colorPrimary">@color/red_700</item>
		<item name="colorPrimaryVariant">@color/red_700_dark</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- headings in Preferences and checkboxes, switches etc. -->
		<item name="colorSecondary">@color/red_700_light</item>
		<item name="colorOnSecondary">@color/black</item>

		<item name="colorSurface">@color/white</item>
		<item name="colorOnSurface">@color/black</item>

		<item name="colorError">@color/error_light</item>
		<item name="colorOnError">@color/white</item>

		<item name="colorOnBackground">@color/black</item>
		<item name ="colorPagerIndicator">@color/black</item>
		<item name="android:colorBackground">@color/white</item>
		
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

		<!-- NavigationBar-->
		<item name="android:windowLightNavigationBar">true</item>
		<!--Navigation Bar color-->
		<item name="android:navigationBarColor">#80FFFFFF</item>

	</style>

	<!--END OF RED BMW THEME-->


